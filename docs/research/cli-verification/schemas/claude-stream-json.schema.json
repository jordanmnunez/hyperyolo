{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://hyperyolo.local/schemas/claude-stream-json.schema.json",
  "title": "Claude Code CLI stream-json event",
  "description": "Schema for newline-delimited events emitted by `claude --print --output-format stream-json --verbose`.",
  "type": "object",
  "oneOf": [
    { "$ref": "#/definitions/system" },
    { "$ref": "#/definitions/assistant" },
    { "$ref": "#/definitions/user" },
    { "$ref": "#/definitions/result" },
    { "$ref": "#/definitions/error" }
  ],
  "definitions": {
    "uuid": {
      "type": "string",
      "pattern": "^[0-9a-f]{8}-[0-9a-f]{4}-[0-9a-f]{4}-[0-9a-f]{4}-[0-9a-f]{12}$",
      "description": "Event UUID."
    },
    "sessionId": {
      "type": "string",
      "pattern": "^[0-9a-f]{8}-[0-9a-f]{4}-[0-9a-f]{4}-[0-9a-f]{4}-[0-9a-f]{12}$",
      "description": "Session identifier generated by Claude Code (UUIDv4)."
    },
    "system": {
      "type": "object",
      "properties": {
        "type": { "const": "system" },
        "subtype": { "const": "init" },
        "session_id": { "$ref": "#/definitions/sessionId" },
        "uuid": { "$ref": "#/definitions/uuid" },
        "cwd": { "type": "string" },
        "model": { "type": "string" },
        "permissionMode": { "type": "string" },
        "tools": { "type": "array", "items": { "type": "string" } },
        "mcp_servers": {
          "type": "array",
          "items": {
            "type": "object",
            "properties": {
              "name": { "type": "string" },
              "status": { "type": "string" }
            },
            "required": ["name", "status"],
            "additionalProperties": true
          }
        },
        "claude_code_version": { "type": "string" }
      },
      "required": ["type", "subtype", "session_id", "uuid"],
      "additionalProperties": true
    },
    "assistant": {
      "type": "object",
      "properties": {
        "type": { "const": "assistant" },
        "session_id": { "$ref": "#/definitions/sessionId" },
        "uuid": { "$ref": "#/definitions/uuid" },
        "parent_tool_use_id": { "type": ["string", "null"] },
        "message": {
          "type": "object",
          "properties": {
            "id": { "type": "string" },
            "model": { "type": "string" },
            "type": { "type": "string" },
            "role": { "const": "assistant" },
            "content": {
              "type": "array",
              "items": {
                "oneOf": [
                  {
                    "type": "object",
                    "properties": {
                      "type": { "const": "text" },
                      "text": { "type": "string" }
                    },
                    "required": ["type", "text"],
                    "additionalProperties": true
                  },
                  {
                    "type": "object",
                    "properties": {
                      "type": { "const": "tool_use" },
                      "id": { "type": "string" },
                      "name": { "type": "string" },
                      "input": { "type": "object", "additionalProperties": true }
                    },
                    "required": ["type", "id", "name", "input"],
                    "additionalProperties": true
                  }
                ]
              }
            },
            "usage": { "type": "object", "additionalProperties": true }
          },
          "required": ["id", "model", "type", "role", "content"],
          "additionalProperties": true
        }
      },
      "required": ["type", "session_id", "uuid", "message"],
      "additionalProperties": true
    },
    "user": {
      "type": "object",
      "properties": {
        "type": { "const": "user" },
        "session_id": { "$ref": "#/definitions/sessionId" },
        "uuid": { "$ref": "#/definitions/uuid" },
        "parent_tool_use_id": { "type": ["string", "null"] },
        "message": {
          "type": "object",
          "properties": {
            "role": { "const": "user" },
            "content": { "type": "array" }
          },
          "required": ["role", "content"],
          "additionalProperties": true
        },
        "tool_use_result": {
          "oneOf": [{ "type": "object", "additionalProperties": true }, { "type": "string" }]
        }
      },
      "required": ["type", "session_id", "uuid", "message"],
      "additionalProperties": true
    },
    "result": {
      "type": "object",
      "properties": {
        "type": { "const": "result" },
        "subtype": { "type": "string" },
        "is_error": { "type": "boolean" },
        "session_id": { "$ref": "#/definitions/sessionId" },
        "uuid": { "$ref": "#/definitions/uuid" },
        "result": { "type": "string" },
        "duration_ms": { "type": "number" },
        "duration_api_ms": { "type": "number" },
        "num_turns": { "type": "number" },
        "usage": { "type": "object", "additionalProperties": true },
        "modelUsage": { "type": "object", "additionalProperties": true },
        "permission_denials": { "type": "array", "items": { "type": "object" } }
      },
      "required": ["type", "subtype", "is_error", "session_id", "uuid"],
      "additionalProperties": true
    },
    "error": {
      "type": "object",
      "properties": {
        "type": { "const": "error" },
        "session_id": { "$ref": "#/definitions/sessionId" },
        "uuid": { "$ref": "#/definitions/uuid" },
        "message": { "type": "string" }
      },
      "required": ["type"],
      "additionalProperties": true
    }
  }
}
